<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GardenApp.ViewModels"
             x:Class="GardenApp.Views.IndoorPlantsPage"
             Title="Indoor Plants">

    <Grid RowDefinitions="Auto,*" 
          Padding="20"
          BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,20">
            <Button Grid.Column="0" 
                    Text="Back"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource SecondaryButton}"/>
            <Label Grid.Column="1" 
                   Text="Indoor Plants"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Products List -->
        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding Products}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="{StaticResource Primary}" 
                               Padding="15" 
                               Margin="0,5">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                  RowSpacing="10">
                                <Label Grid.Row="0" 
                                       Text="{Binding Name}"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="1" 
                                       Text="{Binding Description}"
                                       FontSize="16"/>
                                <Label Grid.Row="2" 
                                       Text="{Binding Price, StringFormat='${0:F2}'}"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"/>
                                <Button Grid.Row="3" 
                                        Text="Add to Cart"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:IndoorPlantsViewModel}}, Path=AddToCartCommand}"
                                        CommandParameter="{Binding Id}"
                                        Style="{StaticResource PrimaryButton}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
