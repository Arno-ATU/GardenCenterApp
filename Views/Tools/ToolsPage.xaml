<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenApp.Views.ToolsPage"
             Title="Tools">

    <Grid RowDefinitions="Auto,*" 
          Padding="20"
          BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" 
                            Spacing="10" 
                            Margin="0,0,0,20">
            <Label Text="Garden Tools Collection"
                   FontSize="24"
                   FontAttributes="Bold"/>
            <Label Text="Find the right tools for your garden"
                   FontSize="16"/>
        </VerticalStackLayout>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <Frame BackgroundColor="{StaticResource Primary}"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}"
                                            CommandParameter="HandTools"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label Text="Hand Tools"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="Essential gardening hand tools"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="{StaticResource Secondary}"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}"
                                            CommandParameter="PowerTools"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label Text="Power Tools"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="Electric and battery-powered equipment"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="{StaticResource Tertiary}"
                       Padding="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}"
                                            CommandParameter="WateringTools"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label Text="Watering Tools"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="Irrigation and watering equipment"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
